    <% end %>
  </section>
  <footer>
    <span><%=button_to "View top media", root_path, class: "btn btn-secondary", form: {style: 'display:inline-block;'}%></span>
    <span><%=button_to "Add a new work", new_work_path, class: "btn btn-primary", form: {style: 'display:inline-block;'} %></span>
  </footer>
</div>